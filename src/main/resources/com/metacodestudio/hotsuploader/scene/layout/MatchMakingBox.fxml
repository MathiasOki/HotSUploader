<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<fx:root spacing="10.0" styleClass="header" stylesheets="@../../../../../styles/window.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane>
         <left>
            <ChoiceBox fx:id="accountSelect" prefWidth="150.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </ChoiceBox>
         </left>
         <top>
            <Label alignment="CENTER" styleClass="primary" text="Players" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </top>
         <right>
            <Button fx:id="viewProfile" disable="true" mnemonicParsing="false" prefWidth="75.0" text="Profile" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Button>
         </right>
      </BorderPane>
      <BorderPane>
         <left>
            <Label styleClass="primary" text="Team League MMR: " BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Label fx:id="tlMmr" styleClass="secondary" text="N/A" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
      <BorderPane>
         <left>
            <Label styleClass="primary" text="Hero League MMR: " BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Label fx:id="hlMmr" styleClass="secondary" text="N/A" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
      <BorderPane>
         <left>
            <Label styleClass="primary" text="Quick Match MMR: " BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Label fx:id="qmMmr" styleClass="secondary" text="N/A" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
</fx:root>
